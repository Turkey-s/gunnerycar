<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find ackermann)/urdf/common_inertial.xacro"/>
    <xacro:macro name="rear_wheel_link" params="robot_name rear_wheel_name wheel_radius xyz">
        <!--机器人${rear_wheel_name}-->
        <link name="${robot_name}_${rear_wheel_name}_link">
            <!--外观描述-->
            <visual>
                <!--偏移和旋转-->
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
                <!--几何形状-->
                <geometry>
                    <!--圆柱体, 单位m-->
                    <cylinder radius = "${wheel_radius}" length = "0.14"/>
                </geometry>
                <!--材质-->
                <material name="yellow">
                    <!--颜色RGBA格式-->
                    <color rgba="1 1 0 0.8"/>
                </material>
            </visual>

            <collision>
                <!--偏移和旋转-->
                <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
                <!--几何形状-->
                <geometry>
                    <!--圆柱体, 单位m-->
                    <cylinder radius = "${wheel_radius}" length = "0.14"/>
                </geometry>
                <!--材质-->
                <material name="yellow">
                    <!--颜色RGBA格式-->
                    <color rgba="1 1 0 0.8"/>
                </material>
            </collision>

            <!--惯性属性-->
            <xacro:cylinder_inertial m="3.0" r="${wheel_radius}" h="0.14"/>
        </link>

        <!--机器人关节-->
        <joint name="${robot_name}_${rear_wheel_name}_joint" type="continuous">
            <!--父链接-->
            <parent link="${robot_name}_base_link"/>
            <!--子链接-->
            <child link="${robot_name}_${rear_wheel_name}_link"/>
            <!--偏移和旋转-->
            <origin xyz="${xyz}" rpy="0.0 0.0 0.0"/>
            <dynamics friction="0.8" damping="0.5" />
            <limit lower="-3.14159" upper="3.14159" effort="200" velocity="-1" />

            <axis xyz="0.0 1 0.0"/>
        </joint>

        <gazebo reference="${robot_name}_${rear_wheel_name}_link">
            <material>Gazebo/Yellow</material>
            <mu1 value="150.0" />
            <mu2 value="10.0" />
            <kp value="1000000000.0" />
            <kd value="1.0" />
        </gazebo>
    </xacro:macro>
</robot>