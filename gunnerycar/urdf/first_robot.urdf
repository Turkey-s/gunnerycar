<?xml version="1.0"?>
<robot name="robot_name">
    <!--机器人身体部分-->
    <link name="base_link">
        <!--外观描述-->
        <visual>
            <!--偏移和旋转-->
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <!--几何形状-->
            <geometry>
                <!--圆柱体, 单位m-->
                <cylinder radius="0.1" length="0.12"/>
            </geometry>
            <!--材质-->
            <material name="white">
                <!--颜色RGBA格式-->
                <color rgba="1 1 1 0.5"/>
            </material>
        </visual>
    </link>

    <!--机器人IMU-->
    <link name="imu_link">
        <!--外观描述-->
        <visual>
            <!--偏移和旋转-->
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <!--几何形状-->
            <geometry>
                <!--正方体, 单位m-->
                <box size="0.02 0.02 0.02"/>
            </geometry>
            <!--材质-->
            <material name="black">
                <!--颜色RGBA格式-->
                <color rgba="0 0 0 0.5"/>
            </material>
        </visual>
    </link>

    <!--机器人关节-->
    <joint name="base_to_imu" type="fixed">
        <!--父链接-->
        <parent link="base_link"/>
        <!--子链接-->
        <child link="imu_link"/>
        <!--偏移和旋转-->
        <origin xyz="0.0 0.0 0.03" rpy="0.0 0.0 0.0"/>
    </joint>
</robot>